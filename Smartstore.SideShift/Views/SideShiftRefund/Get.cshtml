
@model SideShiftRefund
@{
    Layout = "_Layout";
    var label1 = T("Plugins.Smartstore.SideShift.LabelRefund").ToString().Replace("#refundAmount", Model.FiatAmount.ToString() + " " + Model.FiatCurrency)
                                                                         .Replace("#orderId", Model.OrderId.ToString());
    var label2 = T("Plugins.Smartstore.SideShift.LabelRefund2").ToString().Replace("#cryptoRefundAmount", Model.CryptoAmount.ToString())
                                                                         .Replace("#cryptoCode", Model.CryptoCode)
                                                                         .Replace("#cryptoNetwork", Model.CryptoNetwork);
    var label3 = T("Plugins.Smartstore.SideShift.LabelRefund3").ToString().Replace("#cryptoNetwork", Model.CryptoNetwork);
}

<div class="page">
    <div class="page-title">
        <h1>@T("Plugins.Smartstore.SideShift.TitleRefund")</h1>
    </div>
    <div class="page-body">
        <br />
        <p>@label1</p>
        <p>@label2</p>
        <br />

        <form method="post" asp-action="Post" class="form-horizontal">
            <input type="hidden" name="OrderId" value="@Model.OrderId" />
            <input type="hidden" name="CryptoAmount" value="@Model.CryptoAmount" />
            <input type="hidden" name="CryptoCode" value="@Model.CryptoCode" />
            <input type="hidden" name="CryptoNetwork" value="@Model.CryptoNetwork" />
            <input type="hidden" name="Secret" value="@Model.Secret" /> 
            <div class="form-group">
                <label class="control-label col-md-3">@label3</label>
                <div class="col-md-9">
                    <input type="text" id="CryptoAddress" name="CryptoAddress" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
            </div>
        </form>
    </div>
</div>
@{
    Layout = "_Layout";
}
@Model SideShiftRefund

<div class="page">
    <div class="page-title">
        <h1>@T("Plugins.Smartstore.SideShift.TitleRefund")</h1>
    </div>
    <div class="page-body">
        <br />
        <p>@T("Plugins.Smartstore.SideShift.LabelRefund")</p>
        <p>@T("Plugins.Smartstore.SideShift.LabelRefund2")</p>
        <br />

        <form method="post" asp-action="PostRefund" class="form-horizontal">
            <input type="hidden" name="OrderId" value="@Model.OrderId" />
            <input type="hidden" name="CryptoAmount" value="@Model.CryptoAmount" />
            <input type="hidden" name="CryptoCode" value="@Model.CryptoCode" />
            <input type="hidden" name="CryptoNetwork" value="@Model.CryptoNetwork" />
            <input type="hidden" name="Secret" value="@Model.Secret" /> 
            <div class="form-group">
                <label class="control-label col-md-3">>@T("Plugins.Smartstore.SideShift.LabelRefund3")</label>
                <div class="col-md-9">
                    <input type="text" id="CryptoAddress" name="CryptoAddress" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
            </div>
        </form>
    </div>
</div>